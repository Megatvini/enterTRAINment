<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">

            <gradient android:angle="-90" android:startColor="#333c6162" android:endColor="#3effffff"  />
            <stroke android:color="#3a293d3d"
                android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">
            <gradient android:angle="-45" android:endColor="#333c6162" android:startColor="#3effffff"  />
            <stroke android:color="#26293d3d"
                android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>